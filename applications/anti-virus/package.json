{
  "name": "@motech-development/anti-virus",
  "version": "0.0.0",
  "description": "Motech Development anit-virus service",
  "private": true,
  "scripts": {
    "deploy": "serverless deploy --verbose",
    "lint": "eslint -c .eslintrc.yml './src/**/*.ts'",
    "precommit": "lint-staged",
    "predeploy": "./scripts/build.sh",
    "teardown": "serverless remove --verbose",
    "test": "jest --watch",
    "test:ci": "jest --coverage --runInBand --reporters=default --reporters=jest-junit"
  },
  "jest": {
    "collectCoverageFrom": [
      "src/**/*.{ts,tsx}",
      "!src/**/*.d.ts"
    ],
    "moduleDirectories": [
      "../../node_modules",
      "<rootDir>/node_modules"
    ],
    "testEnvironment": "node"
  },
  "jest-junit": {
    "outputDirectory": "../../reports/junit",
    "outputName": "anti-virus.xml"
  },
  "devDependencies": {
    "@motech-development/webpack-conditional-plugin": "^0.0.0",
    "@motech-development/webpack-permissions-plugin": "^0.0.0",
    "filehound": "^1.17.4"
  }
}
