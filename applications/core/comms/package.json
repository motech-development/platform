{
  "name": "@core/comms",
  "version": "0.0.0-development",
  "description": "Motech Development comms infrastructure",
  "scripts": {
    "deploy": "serverless deploy --verbose",
    "lint": "eslint './src/**/*.ts'",
    "teardown": "serverless remove --verbose",
    "test": "jest --watch",
    "test-ci": "jest --coverage --runInBand"
  },
  "dependencies": {
    "@aws-sdk/client-ses": "3.370.0",
    "cfn-response-async": "1.0.0",
    "yup": "1.2.0"
  },
  "devDependencies": {
    "@motech-development/eslint-config-motech-base": "workspace:*",
    "@motech-development/prettier-motech-config": "workspace:*",
    "@motech-development/semantic-release": "workspace:*",
    "@swc/core": "1.7.11",
    "@swc/jest": "0.2.36",
    "@types/aws-lambda": "8.10.143",
    "@types/jest": "29.5.12",
    "@typescript-eslint/eslint-plugin": "6.2.1",
    "@typescript-eslint/parser": "6.2.1",
    "aws-lambda-mock-context": "3.2.1",
    "aws-sdk-client-mock": "3.1.0",
    "aws-sdk-client-mock-jest": "3.1.0",
    "eslint": "8.57.0",
    "eslint-config-airbnb-base": "15.0.0",
    "eslint-config-airbnb-typescript": "17.1.0",
    "eslint-config-prettier": "9.1.0",
    "eslint-import-resolver-node": "0.3.9",
    "eslint-plugin-import": "2.29.1",
    "eslint-plugin-jest": "27.9.0",
    "eslint-plugin-simple-import-sort": "12.1.1",
    "fork-ts-checker-webpack-plugin": "8.0.0",
    "jest": "29.7.0",
    "jest-watch-typeahead": "2.2.2",
    "prettier": "3.2.5",
    "serverless": "3.39.0",
    "serverless-deployment-bucket": "1.6.0",
    "serverless-prune-plugin": "2.0.2",
    "serverless-webpack": "5.14.1",
    "swc-loader": "0.2.6",
    "typescript": "5.5.4",
    "webpack": "5.93.0",
    "webpack-node-externals": "3.0.0"
  },
  "jest": {
    "collectCoverageFrom": [
      "src/**/*.{ts,tsx}",
      "!src/**/*.d.ts"
    ],
    "setupFilesAfterEnv": [
      "<rootDir>/src/setupTests.ts"
    ],
    "testEnvironment": "node",
    "transform": {
      "^.+\\.(t|j)sx?$": "@swc/jest"
    },
    "watchPlugins": [
      "jest-watch-typeahead/filename",
      "jest-watch-typeahead/testname"
    ]
  },
  "lint-staged": {
    "*": "prettier --ignore-unknown --write",
    "src/**/*.{ts,tsx}": "eslint --fix"
  }
}
