{
  "name": "@core/anti-virus",
  "version": "0.0.0",
  "description": "Motech Development anit-virus service",
  "private": true,
  "scripts": {
    "deploy": "yarn predeploy && serverless deploy --verbose",
    "lint": "yarn run -T eslint -c .eslintrc.yml './src/**/*.ts'",
    "precommit": "yarn run -T lint-staged",
    "predeploy": "./scripts/build.sh",
    "prettier": "yarn run -T prettier --config ../../../.prettierrc.yml --write 'src/**/*'",
    "teardown": "yarn run -T serverless remove --verbose",
    "test": "yarn run -T jest --watch",
    "test:ci": "yarn run -T jest --coverage --runInBand",
    "update:definitions": "yarn run -T serverless invoke -f UpdateDefinitions"
  },
  "jest": {
    "collectCoverageFrom": [
      "src/**/*.{ts,tsx}",
      "!src/**/*.d.ts"
    ],
    "testEnvironment": "node"
  },
  "devDependencies": {
    "@motech-development/logger": "^0.0.0",
    "@motech-development/webpack-conditional-plugin": "^0.0.0",
    "@motech-development/webpack-permissions-plugin": "^0.0.0",
    "filehound": "^1.17.4"
  },
  "dependencies": {
    "@motech-development/s3-file-operations": "^0.0.0"
  }
}
