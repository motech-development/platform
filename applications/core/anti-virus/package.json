{
  "name": "@core/anti-virus",
  "version": "0.0.0-development",
  "description": "Motech Development anit-virus service",
  "scripts": {
    "deploy": "run predeploy && serverless deploy --verbose",
    "lint": "eslint -c .eslintrc.yml './src/**/*.ts'",
    "predeploy": "./scripts/build.sh",
    "teardown": "serverless remove --verbose",
    "test": "jest --watch",
    "test-ci": "jest --coverage --runInBand",
    "update-definitions": "serverless invoke -f UpdateDefinitions"
  },
  "dependencies": {
    "@motech-development/node-logger": "workspace:*",
    "@motech-development/s3-file-operations": "workspace:*",
    "aws-sdk": "2.1241.0"
  },
  "devDependencies": {
    "@babel/core": "7.20.2",
    "@babel/preset-env": "7.20.2",
    "@babel/preset-typescript": "7.18.6",
    "@motech-development/webpack-conditional-plugin": "workspace:*",
    "@motech-development/webpack-permissions-plugin": "workspace:*",
    "@types/aws-lambda": "8.10.108",
    "@types/jest": "27.5.2",
    "@typescript-eslint/eslint-plugin": "4.33.0",
    "@typescript-eslint/parser": "4.33.0",
    "aws-lambda-mock-context": "3.2.1",
    "babel-loader": "9.1.0",
    "copy-webpack-plugin": "11.0.0",
    "eslint": "7.32.0",
    "eslint-config-airbnb-base": "15.0.0",
    "eslint-config-prettier": "8.5.0",
    "eslint-plugin-import": "2.26.0",
    "eslint-plugin-prettier": "4.2.1",
    "fork-ts-checker-webpack-plugin": "7.2.13",
    "jest": "27.5.1",
    "prettier": "2.3.0",
    "serverless": "3.24.1",
    "serverless-deployment-bucket": "1.6.0",
    "serverless-prune-plugin": "2.0.1",
    "serverless-step-functions": "3.11.0",
    "serverless-webpack": "serverless-heaven/serverless-webpack#d52701ce0d0e3e801a184662669f979dc5ea13fe",
    "typescript": "4.2.3",
    "webpack": "5.75.0",
    "webpack-node-externals": "3.0.0"
  },
  "jest": {
    "collectCoverageFrom": [
      "src/**/*.{ts,tsx}",
      "!src/**/*.d.ts"
    ],
    "testEnvironment": "node"
  },
  "lint-staged": {
    "*": "prettier --ignore-unknown --write",
    "src/**/*.{ts,tsx}": "eslint -c .eslintrc.yml --fix"
  }
}
