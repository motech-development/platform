{
  "name": "@motech-development/auth",
  "version": "0.0.0",
  "description": "Motech Development authentication API",
  "private": true,
  "scripts": {
    "lint": "eslint -c .eslintrc.yml './src/**/*.ts'",
    "precommit": "lint-staged",
    "prettier": "prettier --config ../../.prettierrc.yml --check 'src/**/*'",
    "start": "serverless offline start --location .webpack/service --region eu-west-2 --stage local",
    "test": "jest --watch",
    "test:ci": "jest --coverage"
  },
  "dependencies": {
    "axios": "^0.19.0",
    "yup": "^0.28.0"
  },
  "devDependencies": {
    "@types/aws-lambda": "^8.10.39",
    "@types/yup": "^0.26.27",
    "cache-loader": "^4.1.0",
    "fork-ts-checker-webpack-plugin": "^4.0.0-beta.4",
    "serverless-dotenv-plugin": "^2.1.1",
    "serverless-offline": "^5.12.1",
    "serverless-webpack": "^5.3.1",
    "thread-loader": "^2.1.3",
    "ts-loader": "^6.2.1",
    "webpack-node-externals": "^1.7.2"
  },
  "jest": {
    "collectCoverageFrom": [
      "**/src/**/*.ts"
    ],
    "preset": "ts-jest",
    "testEnvironment": "node"
  }
}
