{
  "name": "@id/tenant",
  "version": "0.0.0",
  "description": "Motech Development Auth0 tenant",
  "private": true,
  "scripts": {
    "deploy": "a0deploy import -i ./tenant.yaml",
    "import": "a0deploy export -c config.local.json -f yaml -o ./",
    "lint": "yarn run -T eslint -c .eslintrc.yml './src/**/*.js'",
    "precommit": "yarn run -T lint-staged",
    "prettier": "yarn run -T prettier --config ../../../.prettierrc.yml --write 'src/**/*'",
    "test": "yarn run -T jest --watch",
    "test:ci": "yarn run -T jest --coverage --runInBand"
  },
  "jest": {
    "collectCoverageFrom": [
      "src/**/*.js"
    ],
    "setupFiles": [
      "jest-date-mock"
    ],
    "testEnvironment": "node"
  },
  "dependencies": {
    "auth0": "2.32.0"
  },
  "devDependencies": {
    "auth0-deploy-cli": "^5.5.5",
    "istanbul-lib-instrument": "^4.0.3"
  }
}
