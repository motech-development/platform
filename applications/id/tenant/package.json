{
  "name": "@id/tenant",
  "version": "0.0.0",
  "description": "Motech Development universal login",
  "private": true,
  "scripts": {
    "build": "react-app-rewired build",
    "deploy": "a0deploy import -i ./tenant.yaml",
    "import": "a0deploy export -c config.local.json -f yaml -o ./",
    "lint": "eslint -c .eslintrc.yml './src/**/*.{ts,tsx}'",
    "postbuild": "react-snap",
    "precommit": "lint-staged",
    "prettier": "prettier --config ../../.prettierrc.yml --check 'src/**/*'",
    "start": "react-app-rewired start",
    "test": "react-app-rewired test",
    "test:ci": "react-app-rewired test --coverage --runInBand --reporters=default --reporters=jest-junit"
  },
  "dependencies": {
    "@fortawesome/fontawesome-svg-core": "^1.2.28",
    "@fortawesome/free-solid-svg-icons": "^5.13.0",
    "@fortawesome/react-fontawesome": "^0.1.10",
    "@motech-development/axios-hooks": "^0.0.0",
    "@motech-development/breeze-ui": "^0.0.0",
    "@popperjs/core": "^2.4.0",
    "auth0-js": "^9.13.2",
    "formik": "^2.1.4",
    "history": "^4.10.1",
    "moment": "^2.26.0",
    "polished": "^3.6.4",
    "react": "^16.13.1",
    "react-dom": "^16.13.1",
    "react-number-format": "^4.4.1",
    "react-popper": "^2.2.3",
    "react-router-dom": "^5.2.0",
    "styled-components": "^5.1.1",
    "styled-reset": "^4.1.5",
    "yup": "^0.29.1"
  },
  "devDependencies": {
    "auth0-deploy-cli": "^4.3.1"
  },
  "eslintConfig": {
    "extends": "react-app"
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  },
  "jest": {
    "collectCoverageFrom": [
      "src/**/*.{ts,tsx}",
      "!src/{history,index,i18n}.{ts,tsx}",
      "!src/**/*/index.{ts,tsx}"
    ],
    "moduleDirectories": [
      "../../node_modules",
      "<rootDir>/node_modules"
    ]
  },
  "jest-junit": {
    "outputDirectory": "../../reports/junit",
    "outputName": "core-id.xml"
  }
}
