extends layout.pug

block content
  table
    tr
      td(class="typography") Hi {{ user.name }}
    tr
      td(class="typography") Thank you for signing up to {{ application.name}} by Motech Development.
    tr
      td(class="typography--lg-spacing") Please verify your email address by clicking the button below:
    tr
      td(class="typography--lg-spacing")
        table
          tr
            td(bgcolor="#007FA8" class="button")
              a(href="{{ url }}" class="button__link fallback-text") Confirm my account
    tr
      td(class="typography") or copy the link below into your browser:
    tr
      td(class="typography--no-spacing")
        a(href="{{ url }}" class="link") {{ url }}
