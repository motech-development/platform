{
  "name": "@id/client",
  "version": "0.0.0",
  "description": "Motech Development universal login client",
  "private": true,
  "scripts": {
    "build": "react-scripts build",
    "build-icons": "pwa-asset-generator ./assets/icon.svg ./public --icon-only --favicon --background '#161616' --type png --padding '20%' --maskable false",
    "deploy": "serverless client deploy --verbose --no-confirm && run postdeploy",
    "lint": "eslint -c .eslintrc.yml './src/**/*.{ts,tsx}'",
    "postdeploy": "react-snap",
    "start": "react-scripts start",
    "teardown": "serverless client remove --verbose --no-confirm",
    "test": "react-scripts test",
    "test-ci": "react-scripts test --coverage --runInBand"
  },
  "dependencies": {
    "@motech-development/axios-hooks": "workspace:packages/axios-hooks",
    "@motech-development/breeze-ui": "workspace:packages/breeze-ui",
    "@motech-development/ga-web-vitals": "workspace:packages/ga-web-vitals",
    "auth0-js": "9.18.1",
    "axios": "0.27.2",
    "body-scroll-lock": "3.1.5",
    "formik": "2.2.6",
    "history": "4.10.1",
    "i18next": "21.6.16",
    "i18next-browser-languagedetector": "6.1.8",
    "i18next-http-backend": "1.3.2",
    "react": "17.0.2",
    "react-dom": "17.0.2",
    "react-ga": "3.3.1",
    "react-i18next": "11.15.4",
    "react-router-dom": "5.3.4",
    "styled-components": "5.3.0",
    "web-vitals": "2.1.4",
    "yup": "0.29.3"
  },
  "devDependencies": {
    "@testing-library/jest-dom": "5.16.5",
    "@testing-library/react": "12.1.5",
    "@testing-library/user-event": "13.5.0",
    "@types/auth0-js": "9.14.5",
    "@types/jest": "26.0.24",
    "@types/react": "17.0.50",
    "@types/react-dom": "17.0.17",
    "@types/react-router-dom": "5.3.3",
    "@types/styled-components": "5.1.9",
    "@types/yup": "0.29.11",
    "@typescript-eslint/eslint-plugin": "4.20.0",
    "@typescript-eslint/parser": "4.20.0",
    "eslint": "7.28.0",
    "eslint-config-airbnb": "18.2.1",
    "eslint-config-prettier": "8.3.0",
    "eslint-plugin-import": "2.25.4",
    "eslint-plugin-jsx-a11y": "6.5.1",
    "eslint-plugin-prettier": "4.0.0",
    "eslint-plugin-react": "7.28.0",
    "eslint-plugin-react-hooks": "4.3.0",
    "jest-styled-components": "7.0.8",
    "prettier": "2.3.0",
    "pwa-asset-generator": "6.0.6",
    "react-scripts": "5.0.1",
    "react-snap": "1.23.0",
    "serverless": "2.70.0",
    "serverless-deployment-bucket": "1.5.2",
    "serverless-finch": "2.8.0",
    "typescript": "4.2.3"
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  },
  "jest": {
    "collectCoverageFrom": [
      "hooks/**/*.js",
      "rules/**/*.js",
      "src/**/*.{ts,tsx}",
      "!src/{history,index,i18n}.{ts,tsx}",
      "!src/**/*/index.{ts,tsx}"
    ],
    "resetMocks": false
  },
  "reactSnap": {
    "include": [
      "/login",
      "/lo/reset"
    ],
    "minifyHtml": {
      "collapseWhitespace": false
    }
  },
  "lint-staged": {
    "*": "prettier --ignore-unknown --write",
    "src/**/*.{ts,tsx}": "eslint -c .eslintrc.yml --fix"
  }
}
