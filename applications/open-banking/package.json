{
  "name": "@motech-development/open-banking",
  "version": "0.0.0",
  "description": "Motech Development open banking API",
  "private": true,
  "scripts": {
    "deploy": "serverless deploy --verbose",
    "dynamodb": "sls dynamodb install",
    "lint": "eslint -c .eslintrc.yml './src/**/*.ts'",
    "precommit": "lint-staged",
    "start": "serverless offline start",
    "teardown": "serverless remove --verbose"
  },
  "jest": {
    "collectCoverageFrom": [
      "src/**/*.{ts,tsx}",
      "!src/**/*.d.ts"
    ],
    "moduleDirectories": [
      "../../node_modules",
      "<rootDir>/node_modules"
    ],
    "testEnvironment": "node"
  },
  "jest-junit": {
    "outputDirectory": "../../reports/junit",
    "outputName": "open-banking.xml"
  }
}
