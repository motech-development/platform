{
  "name": "@open-banking/api",
  "version": "0.0.0",
  "description": "Motech Development open banking API",
  "private": true,
  "scripts": {
    "deploy": "yarn run -T serverless deploy --verbose",
    "dynamodb": "yarn run -T sls dynamodb install",
    "lint": "yarn run -T eslint -c .eslintrc.yml './src/**/*.ts'",
    "precommit": "yarn run -T lint-staged",
    "prettier": "yarn run -T prettier --config ../../../.prettierrc.yml --write 'src/**/*'",
    "start": "yarn run -T serverless offline start --env local",
    "teardown": "yarn run -T serverless remove --verbose",
    "test": "yarn run -T jest --watch",
    "test:ci": "yarn run -T jest --coverage --runInBand"
  },
  "jest": {
    "collectCoverageFrom": [
      "src/**/*.{ts,tsx}",
      "!src/**/*.d.ts"
    ],
    "testEnvironment": "node"
  },
  "dependencies": {
    "@motech-development/api-gateway-handler": "^0.0.0",
    "axios": "^0.21.1",
    "yup": "^0.29.1"
  },
  "devDependencies": {
    "axios-mock-adapter": "^1.19.0"
  }
}
