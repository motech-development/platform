{
  "name": "@open-banking/api",
  "version": "0.0.0",
  "description": "Motech Development open banking API",
  "private": true,
  "scripts": {
    "deploy": "serverless deploy --verbose --force",
    "dynamodb": "sls dynamodb install",
    "lint": "eslint -c .eslintrc.yml './src/**/*.ts'",
    "precommit": "lint-staged",
    "start": "serverless offline start --env local",
    "teardown": "serverless remove --verbose",
    "test": "jest --watch",
    "test:ci": "jest --coverage --runInBand --reporters=default --reporters=jest-junit"
  },
  "jest": {
    "collectCoverageFrom": [
      "src/**/*.{ts,tsx}",
      "!src/**/*.d.ts"
    ],
    "moduleDirectories": [
      "../../node_modules",
      "<rootDir>/node_modules"
    ],
    "testEnvironment": "node"
  },
  "jest-junit": {
    "outputDirectory": "../../../reports/junit",
    "outputName": "open-banking.xml"
  },
  "dependencies": {
    "@motech-development/api-gateway-handler": "^0.0.0",
    "axios": "^0.21.1",
    "yup": "^0.32.9"
  },
  "devDependencies": {
    "axios-mock-adapter": "^1.18.1"
  }
}
