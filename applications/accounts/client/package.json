{
  "name": "@accounts/client",
  "version": "0.0.0",
  "description": "Motech Development accounts client application",
  "private": true,
  "scripts": {
    "build": "react-app-rewired build",
    "build:icons": "pwa-asset-generator ./assets/icon.svg ./public --icon-only --favicon --background '#161616' --padding '20%'",
    "deploy": "serverless client deploy --verbose --no-confirm",
    "e2e": "cypress open",
    "e2e:ci": "cypress run --reporter junit --reporter-options 'mochaFile=../../reports/junit/accounts-client.xml'",
    "lint": "eslint -c .eslintrc.yml './src/**/*.{ts,tsx}'",
    "precommit": "lint-staged",
    "prettier": "prettier --config ../../.prettierrc.yml --check 'src/**/*'",
    "start": "react-app-rewired start",
    "teardown": "serverless client remove --verbose --no-confirm",
    "test": "react-app-rewired test",
    "test:ci": "react-app-rewired test --coverage --runInBand --reporters=default --reporters=jest-junit"
  },
  "dependencies": {
    "@apollo/react-hooks": "^3.1.5",
    "@auth0/auth0-spa-js": "^1.9.0",
    "@fortawesome/fontawesome-svg-core": "^1.2.28",
    "@fortawesome/free-solid-svg-icons": "^5.13.0",
    "@fortawesome/react-fontawesome": "^0.1.10",
    "@motech-development/auth": "^0.0.0",
    "@motech-development/axios-hooks": "^0.0.0",
    "@motech-development/breeze-ui": "^0.0.0",
    "@popperjs/core": "^2.4.0",
    "apollo-boost": "^0.4.9",
    "apollo-cache-inmemory": "^1.6.6",
    "apollo-client": "^2.6.10",
    "apollo-link": "^1.2.14",
    "aws-appsync": "^3.0.3",
    "aws-appsync-auth-link": "^2.0.2",
    "aws-appsync-subscription-link": "^2.1.0",
    "axios": "^0.19.2",
    "file-saver": "^2.0.2",
    "formik": "^2.1.4",
    "graphql": "^15.0.0",
    "history": "^4.10.1",
    "i18next": "^19.4.5",
    "i18next-browser-languagedetector": "^4.2.0",
    "i18next-http-backend": "^1.0.15",
    "moment": "^2.26.0",
    "polished": "^3.6.4",
    "react": "^16.13.1",
    "react-apollo": "^3.1.5",
    "react-dom": "^16.13.1",
    "react-i18next": "^11.5.0",
    "react-idle-timer": "^4.2.12",
    "react-number-format": "^4.4.1",
    "react-popper": "^2.2.3",
    "react-router-dom": "^5.2.0",
    "styled-components": "^5.1.1",
    "styled-reset": "^4.1.5",
    "yup": "^0.29.1"
  },
  "devDependencies": {
    "@apollo/react-testing": "^3.1.4"
  },
  "eslintConfig": {
    "extends": "react-app"
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  },
  "jest": {
    "collectCoverageFrom": [
      "src/**/*.{ts,tsx}",
      "!src/{history,index,i18n}.{ts,tsx}",
      "!src/**/*/index.{ts,tsx}"
    ],
    "moduleDirectories": [
      "../../node_modules",
      "<rootDir>/node_modules"
    ]
  },
  "jest-junit": {
    "outputDirectory": "../../reports/junit",
    "outputName": "accounts-client.xml"
  }
}
