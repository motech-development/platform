{
  "name": "@accounts/client",
  "version": "0.0.0",
  "description": "Motech Development accounts client application",
  "private": true,
  "scripts": {
    "build": "yarn run -T react-scripts build",
    "build:icons": "yarn run -T pwa-asset-generator ./assets/icon.svg ./public --icon-only --favicon --background '#161616' --type png --padding '20%' --maskable false",
    "build:splash:landscape": "yarn run -T pwa-asset-generator ./assets/splash.svg ./public --splash-only --background '#161616' --type png --padding 'calc(50vh - 5%) calc(50vw - 10%)' --landscape-only",
    "build:splash:portrait": "yarn run -T pwa-asset-generator ./assets/splash.svg ./public --splash-only --background '#161616' --type png --portrait-only",
    "deploy": "yarn run -T serverless client deploy --verbose --no-confirm",
    "e2e": "yarn run -T cypress open",
    "e2e:ci": "yarn run -T cy2 run --browser chrome --record --parallel --headless",
    "lint": "yarn run -T eslint -c .eslintrc.yml './src/**/*.{ts,tsx}'",
    "precommit": "yarn run -T lint-staged",
    "prettier": "yarn run -T prettier --config ../../../.prettierrc.yml --write 'src/**/*'",
    "start": "yarn run -T react-scripts start",
    "teardown": "yarn run -T serverless client remove --verbose --no-confirm",
    "test": "yarn run -T react-scripts test",
    "test:ci": "yarn run -T react-scripts test --coverage --runInBand"
  },
  "dependencies": {
    "@apollo/client": "3.4.5",
    "@auth0/auth0-spa-js": "^1.14.0",
    "@fortawesome/fontawesome-svg-core": "^1.2.35",
    "@fortawesome/free-solid-svg-icons": "^5.15.3",
    "@fortawesome/react-fontawesome": "^0.1.14",
    "@motech-development/appsync-apollo": "^0.0.0",
    "@motech-development/auth": "^0.0.0",
    "@motech-development/axios-hooks": "^0.0.0",
    "@motech-development/breeze-ui": "^0.0.0",
    "@motech-development/ga-web-vitals": "^0.0.0",
    "@motech-development/query-string-hook": "^0.0.0",
    "@popperjs/core": "^2.9.1",
    "aws-appsync-auth-link": "3.0.6",
    "aws-appsync-subscription-link": "3.0.8",
    "axios": "^0.21.1",
    "decimal.js": "^10.2.1",
    "file-saver": "^2.0.5",
    "formik": "^2.2.6",
    "graphql": "^15.5.0",
    "history": "^4.10.1",
    "i18next": "^20.1.0",
    "i18next-browser-languagedetector": "^6.1.0",
    "i18next-http-backend": "^1.2.1",
    "luxon": "^2.0.2",
    "polished": "^4.1.1",
    "qs": "^6.10.1",
    "react": "^17.0.2",
    "react-dom": "^17.0.2",
    "react-ga": "^3.3.0",
    "react-i18next": "^11.8.12",
    "react-idle-timer": "^4.5.6",
    "react-number-format": "^4.5.2",
    "react-popper": "^2.2.5",
    "react-router-dom": "^5.2.0",
    "styled-components": "^5.2.1",
    "styled-reset": "^4.3.4",
    "web-vitals": "^0.2.4",
    "workbox-background-sync": "^5.1.3",
    "workbox-broadcast-update": "^5.1.3",
    "workbox-cacheable-response": "^5.1.3",
    "workbox-core": "^5.1.3",
    "workbox-expiration": "^5.1.3",
    "workbox-google-analytics": "^5.1.3",
    "workbox-navigation-preload": "^5.1.3",
    "workbox-precaching": "^5.1.3",
    "workbox-range-requests": "^5.1.3",
    "workbox-routing": "^5.1.3",
    "workbox-strategies": "^5.1.3",
    "workbox-streams": "^5.1.3",
    "yup": "^0.29.1"
  },
  "eslintConfig": {
    "extends": "react-app"
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  },
  "jest": {
    "collectCoverageFrom": [
      "src/**/*.{ts,tsx}",
      "!src/{history,index,i18n}.{ts,tsx}",
      "!src/**/*/index.{ts,tsx}"
    ]
  }
}
