{
  "name": "@motech-development/accounts",
  "version": "0.0.0",
  "description": "Motech Development accounts application",
  "private": true,
  "scripts": {
    "build": "react-app-rewired build",
    "lint": "eslint -c .eslintrc.yml './src/**/*.{ts,tsx}'",
    "precommit": "lint-staged",
    "prettier": "prettier --config ../../.prettierrc.yml --check 'src/**/*'",
    "start": "react-app-rewired start",
    "test": "react-app-rewired test",
    "test:ci": "react-app-rewired test --coverage --runInBand --reporters=default --reporters=jest-junit"
  },
  "dependencies": {
    "@auth0/auth0-spa-js": "^1.6.0",
    "@fortawesome/fontawesome-svg-core": "^1.2.25",
    "@fortawesome/free-solid-svg-icons": "^5.11.2",
    "@fortawesome/react-fontawesome": "^0.1.8",
    "@motech-development/auth": "^0.0.0",
    "@motech-development/breeze-ui": "^0.0.0",
    "axios": "^0.19.0",
    "formik": "^2.0.8",
    "history": "^4.10.1",
    "polished": "^3.4.2",
    "react": "^16.12.0",
    "react-dom": "^16.12.0",
    "react-popper": "^1.3.7",
    "react-router-dom": "^5.1.2",
    "styled-components": "^4.4.1",
    "styled-reset": "^4.0.8",
    "yup": "^0.28.0"
  },
  "eslintConfig": {
    "extends": "react-app"
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  },
  "devDependencies": {
    "@types/react-router-dom": "^5.1.3",
    "@types/yup": "^0.26.27"
  },
  "jest": {
    "moduleDirectories": [
      "../../node_modules",
      "<rootDir>/node_modules"
    ]
  },
  "jest-junit": {
    "outputDirectory": "../../reports/junit",
    "outputName": "accounts.xml"
  }
}
