{
  "name": "@accounts/storage",
  "version": "0.0.0-development",
  "description": "Motech Development accounts file storage",
  "scripts": {
    "deploy": "serverless deploy --verbose",
    "lint": "eslint --cache './src/**/*.ts'",
    "teardown": "serverless remove --verbose",
    "test": "jest --watch",
    "test-ci": "jest --coverage --runInBand"
  },
  "dependencies": {
    "@motech-development/api-gateway-handler": "workspace:*",
    "@motech-development/s3-file-operations": "workspace:*",
    "aws-sdk": "2.1241.0",
    "uuid": "8.3.2",
    "yup": "0.29.3"
  },
  "devDependencies": {
    "@babel/core": "7.20.12",
    "@babel/preset-env": "7.20.2",
    "@babel/preset-typescript": "7.18.6",
    "@motech-development/eslint-config-motech-base": "workspace:*",
    "@motech-development/prettier-motech-config": "workspace:*",
    "@motech-development/semantic-release": "workspace:*",
    "@types/aws-lambda": "8.10.110",
    "@types/jest": "29.4.0",
    "@types/uuid": "8.3.4",
    "@types/yup": "0.29.11",
    "aws-lambda-mock-context": "3.2.1",
    "babel-loader": "9.1.2",
    "eslint": "8.33.0",
    "fork-ts-checker-webpack-plugin": "7.2.13",
    "jest": "29.4.3",
    "prettier": "2.3.0",
    "serverless": "3.27.0",
    "serverless-deployment-bucket": "1.6.0",
    "serverless-offline": "11.3.0",
    "serverless-prune-plugin": "2.0.2",
    "serverless-webpack": "^5.11.0",
    "typescript": "4.9.5",
    "webpack": "5.75.0",
    "webpack-node-externals": "3.0.0"
  },
  "jest": {
    "collectCoverageFrom": [
      "src/**/*.{ts,tsx}",
      "!src/**/*.d.ts"
    ],
    "testEnvironment": "node"
  },
  "lint-staged": {
    "*": "prettier --ignore-unknown --write",
    "src/**/*.{ts,tsx}": "eslint --cache --fix"
  }
}
