{
  "name": "@accounts/notifications",
  "version": "0.0.0",
  "description": "Motech Development accounts notifications infrastructure",
  "private": true,
  "scripts": {
    "deploy": "serverless deploy --verbose --force",
    "lint": "eslint -c .eslintrc.yml './src/**/*.ts'",
    "precommit": "lint-staged",
    "teardown": "serverless remove --verbose",
    "test": "jest --watch",
    "test:ci": "jest --coverage --runInBand"
  },
  "jest": {
    "collectCoverageFrom": [
      "src/**/*.{ts,tsx}",
      "!src/**/*.d.ts"
    ],
    "testEnvironment": "node"
  },
  "dependencies": {
    "aws-appsync": "^4.0.3",
    "cross-fetch": "^3.1.2",
    "graphql-tag": "^2.11.0"
  }
}
