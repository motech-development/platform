{
  "name": "@accounts/notifications",
  "version": "0.0.0",
  "description": "Motech Development accounts notifications infrastructure",
  "private": true,
  "scripts": {
    "deploy": "serverless deploy --verbose --force",
    "lint": "eslint -c .eslintrc.yml './src/**/*.ts'",
    "precommit": "lint-staged",
    "teardown": "serverless remove --verbose",
    "test": "jest --watch",
    "test:ci": "jest --coverage --runInBand --reporters=default --reporters=jest-junit"
  },
  "jest": {
    "collectCoverageFrom": [
      "src/**/*.{ts,tsx}",
      "!src/**/*.d.ts"
    ],
    "moduleDirectories": [
      "../../node_modules",
      "<rootDir>/node_modules"
    ],
    "testEnvironment": "node"
  },
  "jest-junit": {
    "outputDirectory": "../../../reports/junit",
    "outputName": "accounts-notifications.xml"
  },
  "dependencies": {
    "aws-appsync": "^4.0.3",
    "cross-fetch": "^3.0.6",
    "graphql-tag": "^2.11.0"
  }
}
