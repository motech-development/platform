{
  "name": "@accounts/notifications",
  "version": "0.0.0-development",
  "description": "Motech Development accounts notifications infrastructure",
  "scripts": {
    "deploy": "serverless deploy --verbose",
    "lint": "eslint './src/**/*.ts'",
    "teardown": "serverless remove --verbose",
    "test": "jest --watch",
    "test-ci": "jest --coverage --runInBand"
  },
  "dependencies": {
    "@aws-sdk/client-dynamodb": "3.370.0",
    "@aws-sdk/lib-dynamodb": "3.370.0",
    "@motech-development/api-gateway-handler": "workspace:*",
    "luxon": "3.3.0",
    "uuid": "9.0.0",
    "yup": "1.2.0"
  },
  "devDependencies": {
    "@motech-development/eslint-config-motech-base": "workspace:*",
    "@motech-development/prettier-motech-config": "workspace:*",
    "@motech-development/semantic-release": "workspace:*",
    "@swc/core": "1.3.69",
    "@swc/jest": "0.2.26",
    "@types/aws-lambda": "8.10.119",
    "@types/jest": "29.5.3",
    "@types/luxon": "3.3.0",
    "@types/uuid": "9.0.2",
    "@typescript-eslint/eslint-plugin": "5.60.1",
    "@typescript-eslint/parser": "5.60.1",
    "aws-lambda-mock-context": "3.2.1",
    "aws-sdk-client-mock": "3.0.0",
    "aws-sdk-client-mock-jest": "3.0.0",
    "eslint": "8.43.0",
    "eslint-config-airbnb-base": "15.0.0",
    "eslint-config-airbnb-typescript": "17.0.0",
    "eslint-config-prettier": "8.8.0",
    "eslint-import-resolver-node": "0.3.7",
    "eslint-plugin-import": "2.27.5",
    "eslint-plugin-jest": "27.2.3",
    "fork-ts-checker-webpack-plugin": "8.0.0",
    "jest": "29.6.1",
    "jest-date-mock": "1.0.8",
    "jest-watch-typeahead": "2.2.2",
    "prettier": "2.8.8",
    "serverless": "3.32.2",
    "serverless-deployment-bucket": "1.6.0",
    "serverless-prune-plugin": "2.0.2",
    "serverless-webpack": "5.11.0",
    "swc-loader": "0.2.3",
    "typescript": "5.1.6",
    "webpack": "5.88.1",
    "webpack-node-externals": "3.0.0"
  },
  "jest": {
    "collectCoverageFrom": [
      "src/**/*.{ts,tsx}",
      "!src/**/*.d.ts"
    ],
    "setupFilesAfterEnv": [
      "<rootDir>/src/setupTests.ts"
    ],
    "testEnvironment": "node",
    "transform": {
      "^.+\\.(t|j)sx?$": "@swc/jest"
    },
    "watchPlugins": [
      "jest-watch-typeahead/filename",
      "jest-watch-typeahead/testname"
    ]
  },
  "lint-staged": {
    "*": "prettier --ignore-unknown --write",
    "src/**/*.{ts,tsx}": "eslint --fix"
  }
}
