    "@babel/preset-typescript": "7.18.6",
    "@types/aws-lambda": "8.10.108",
    "@types/jest": "26.0.24",
    "@types/luxon": "2.0.9",
    "@types/uuid": "8.3.4",
    "@types/yup": "0.29.11",
    "@typescript-eslint/eslint-plugin": "4.33.0",
    "@typescript-eslint/parser": "4.33.0",
    "aws-lambda-mock-context": "3.2.1",
    "babel-loader": "8.3.0",
