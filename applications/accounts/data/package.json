{
  "name": "@accounts/data",
  "version": "0.0.0-development",
  "description": "Motech Development accounts data infrastructure",
  "scripts": {
    "deploy": "serverless deploy --verbose",
    "lint": "eslint './src/**/*.ts'",
    "teardown": "serverless remove --verbose",
    "test": "jest --watch",
    "test-ci": "jest --coverage --runInBand"
  },
  "dependencies": {
    "@aws-sdk/client-dynamodb": "3.370.0",
    "@aws-sdk/client-sqs": "3.370.0",
    "@aws-sdk/lib-dynamodb": "3.370.0",
    "@aws-sdk/util-dynamodb": "3.370.0",
    "@motech-development/node-logger": "workspace:*",
    "@sentry/aws-serverless": "8.49.0",
    "@sentry/profiling-node": "8.49.0",
    "decimal.js": "10.5.0",
    "luxon": "3.5.0",
    "uuid": "9.0.1"
  },
  "devDependencies": {
    "@eslint/eslintrc": "3.3.1",
    "@eslint/js": "9.37.0",
    "@kesills/eslint-config-airbnb-typescript": "20.0.0",
    "@motech-development/eslint-config-motech-base": "workspace:*",
    "@motech-development/prettier-motech-config": "workspace:*",
    "@motech-development/semantic-release": "workspace:*",
    "@stylistic/eslint-plugin": "2.9.0",
    "@swc/core": "1.11.5",
    "@swc/jest": "0.2.37",
    "@types/aws-lambda": "8.10.147",
    "@types/jest": "29.5.14",
    "@types/luxon": "3.4.2",
    "@types/uuid": "9.0.8",
    "aws-lambda-mock-context": "3.2.1",
    "aws-sdk-client-mock": "4.1.0",
    "aws-sdk-client-mock-jest": "4.1.0",
    "eslint": "9.37.0",
    "eslint-config-airbnb-base": "15.0.0",
    "eslint-config-prettier": "10.1.8",
    "eslint-import-resolver-node": "0.3.9",
    "eslint-import-resolver-typescript": "4.4.4",
    "eslint-plugin-import": "2.31.0",
    "eslint-plugin-jest": "28.11.0",
    "eslint-plugin-simple-import-sort": "12.1.1",
    "fork-ts-checker-webpack-plugin": "9.0.2",
    "jest": "29.7.0",
    "jest-date-mock": "1.0.10",
    "jest-watch-typeahead": "2.2.2",
    "prettier": "3.2.5",
    "serverless": "3.39.0",
    "serverless-deployment-bucket": "1.6.0",
    "serverless-prune-plugin": "2.1.0",
    "serverless-webpack": "5.15.0",
    "swc-loader": "0.2.6",
    "typescript": "5.8.2",
    "typescript-eslint": "8.45.0",
    "webpack": "5.96.1",
    "webpack-node-externals": "3.0.0"
  },
  "jest": {
    "collectCoverageFrom": [
      "src/**/*.{ts,tsx}",
      "!src/**/*.d.ts"
    ],
    "setupFilesAfterEnv": [
      "<rootDir>/src/setupTests.ts"
    ],
    "testEnvironment": "node",
    "transform": {
      "^.+\\.(t|j)sx?$": "@swc/jest"
    },
    "watchPlugins": [
      "jest-watch-typeahead/filename",
      "jest-watch-typeahead/testname"
    ]
  },
  "lint-staged": {
    "*": "prettier --ignore-unknown --write",
    "src/**/*.{ts,tsx}": "eslint --fix"
  }
}
