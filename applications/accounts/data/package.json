{
  "name": "@accounts/data",
  "version": "0.0.0",
  "description": "Motech Development accounts data infrastructure",
  "private": true,
  "scripts": {
    "deploy": "serverless deploy --verbose --force",
    "deploy:warm-up": "AWS_CLIENT_TIMEOUT=900000 serverless invoke -f WarmUp -l",
    "lint": "eslint -c .eslintrc.yml './src/**/*.ts'",
    "precommit": "lint-staged",
    "teardown": "serverless remove --verbose",
    "test": "jest --watch",
    "test:ci": "jest --coverage --runInBand"
  },
  "jest": {
    "collectCoverageFrom": [
      "src/**/*.{ts,tsx}",
      "!src/**/*.d.ts"
    ],
    "setupFiles": [
      "jest-date-mock"
    ],
    "testEnvironment": "node"
  },
  "dependencies": {
    "@motech-development/logger": "^0.0.0",
    "decimal.js": "^10.2.1",
    "luxon": "^1.26.0",
    "uuid": "^8.3.2"
  }
}
