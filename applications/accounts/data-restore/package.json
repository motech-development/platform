{
  "name": "@accounts/data-restore",
  "version": "0.1.0",
  "bin": "bin/infrastructure.js",
  "scripts": {
    "build": "tsc",
    "cdk": "cdk",
    "deploy": "cdk deploy --all",
    "lint": "eslint './**/*.{js,jsx,ts,tsx}'",
    "teardown": "cdk destroy --all",
    "test": "jest --watch",
    "test-ci": "jest --coverage --runInBand"
  },
  "dependencies": {
    "@aws-sdk/client-dynamodb": "3.370.0",
    "@aws-sdk/util-dynamodb": "3.370.0",
    "@motech-development/node-logger": "workspace:*",
    "aws-cdk-lib": "2.173.4",
    "constructs": "10.4.2"
  },
  "devDependencies": {
    "@motech-development/eslint-config-motech-base": "workspace:*",
    "@motech-development/prettier-motech-config": "workspace:*",
    "@motech-development/semantic-release": "workspace:*",
    "@swc/core": "1.9.3",
    "@swc/helpers": "0.5.15",
    "@swc/jest": "0.2.37",
    "@types/aws-lambda": "8.10.146",
    "@types/jest": "29.5.14",
    "@typescript-eslint/eslint-plugin": "6.2.1",
    "@typescript-eslint/parser": "6.2.1",
    "aws-cdk": "2.173.4",
    "aws-lambda-mock-context": "3.2.1",
    "aws-sdk-client-mock": "4.1.0",
    "aws-sdk-client-mock-jest": "4.1.0",
    "esbuild": "0.24.2",
    "eslint": "8.57.1",
    "eslint-config-airbnb-base": "15.0.0",
    "eslint-config-airbnb-typescript": "18.0.0",
    "eslint-config-prettier": "9.1.0",
    "eslint-import-resolver-node": "0.3.9",
    "eslint-plugin-import": "2.31.0",
    "eslint-plugin-jest": "28.9.0",
    "eslint-plugin-simple-import-sort": "12.1.1",
    "jest": "29.7.0",
    "jest-watch-typeahead": "2.2.2",
    "prettier": "3.2.5",
    "ts-node": "10.9.2",
    "typescript": "5.7.2"
  },
  "jest": {
    "collectCoverageFrom": [
      "src/**/*.{ts,tsx}",
      "!src/**/*.d.ts"
    ],
    "setupFilesAfterEnv": [
      "<rootDir>/src/setupTests.ts"
    ],
    "testEnvironment": "node",
    "transform": {
      "^.+\\.(t|j)sx?$": "@swc/jest"
    },
    "watchPlugins": [
      "jest-watch-typeahead/filename",
      "jest-watch-typeahead/testname"
    ]
  },
  "lint-staged": {
    "*": "prettier --ignore-unknown --write",
    "src/**/*.{ts,tsx}": "eslint --fix"
  }
}
