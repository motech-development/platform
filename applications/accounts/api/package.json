{
  "name": "@accounts/api",
  "version": "0.0.0",
  "description": "Motech Development accounts API",
  "private": true,
  "scripts": {
    "deploy": "serverless deploy --verbose",
    "lint": "eslint -c .eslintrc.yml './src/**/*.ts'",
    "prettier": "prettier --config ../../../.prettierrc.yml --write 'src/**/*'",
    "teardown": "serverless remove --verbose",
    "test": "jest --watch",
    "test:ci": "jest --coverage --runInBand"
  },
  "dependencies": {
    "aws-appsync": "4.1.8",
    "aws-sdk": "2.1046.0",
    "cross-fetch": "3.1.5",
    "decimal.js": "10.3.1",
    "graphql-tag": "2.12.6",
    "luxon": "2.3.0"
  },
  "devDependencies": {
    "@motech-development/serverless-outputs-env": "workspace:packages/serverless-outputs-env",
    "@types/assert": "1.5.6",
    "@types/aws-lambda": "8.10.101",
    "@types/jest": "26.0.24",
    "@types/luxon": "2.0.9",
    "assert": "2.0.0",
    "aws-lambda-mock-context": "3.2.1",
    "babel-loader": "8.1.0",
    "cache-loader": "4.1.0",
    "eslint": "7.28.0",
    "eslint-config-airbnb": "18.2.1",
    "eslint-config-prettier": "8.3.0",
    "eslint-plugin-import": "2.25.4",
    "eslint-plugin-prettier": "4.0.0",
    "fork-ts-checker-webpack-plugin": "6.5.2",
    "jest": "26.6.0",
    "lint-staged": "12.3.7",
    "prettier": "2.3.0",
    "serverless": "2.70.0",
    "serverless-appsync-plugin": "1.12.1",
    "serverless-deployment-bucket": "1.5.2",
    "serverless-prune-plugin": "2.0.1",
    "serverless-webpack": "5.6.1",
    "tomlify-j0.4": "3.0.0",
    "typescript": "4.2.3",
    "webpack": "4.44.2",
    "webpack-node-externals": "3.0.0"
  },
  "jest": {
    "collectCoverageFrom": [
      "src/**/*.{ts,tsx}",
      "!src/**/*.d.ts"
    ],
    "testEnvironment": "node"
  },
  "lint-staged": {
    "*": "prettier --ignore-unknown --write",
    "src/**/*.{ts,tsx}": "eslint -c .eslintrc.yml --fix"
  }
}
