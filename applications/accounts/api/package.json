{
  "name": "@accounts/api",
  "version": "0.0.0-development",
  "description": "Motech Development accounts API",
  "scripts": {
    "deploy": "serverless deploy --verbose",
    "lint": "eslint './src/**/*.ts'",
    "teardown": "serverless remove --verbose",
    "test": "jest --watch",
    "test-ci": "jest --coverage --runInBand"
  },
  "dependencies": {
    "@aws-sdk/client-dynamodb": "3.370.0",
    "@aws-sdk/credential-providers": "3.370.0",
    "@aws-sdk/lib-dynamodb": "3.370.0",
    "@aws-sdk/util-dynamodb": "3.370.0",
    "@motech-development/node-logger": "workspace:*",
    "aws-appsync": "4.1.9",
    "decimal.js": "10.4.3",
    "graphql": "15.8.0",
    "graphql-tag": "2.12.6",
    "luxon": "3.3.0"
  },
  "devDependencies": {
    "@motech-development/eslint-config-motech-base": "workspace:*",
    "@motech-development/prettier-motech-config": "workspace:*",
    "@motech-development/semantic-release": "workspace:*",
    "@motech-development/serverless-outputs-env": "workspace:*",
    "@swc/core": "1.3.74",
    "@swc/jest": "0.2.27",
    "@types/aws-lambda": "8.10.119",
    "@types/jest": "29.5.3",
    "@types/luxon": "3.3.1",
    "@typescript-eslint/eslint-plugin": "6.2.1",
    "@typescript-eslint/parser": "6.2.1",
    "aws-lambda-mock-context": "3.2.1",
    "aws-sdk-client-mock": "3.0.0",
    "aws-sdk-client-mock-jest": "3.0.0",
    "eslint": "8.46.0",
    "eslint-config-airbnb-base": "15.0.0",
    "eslint-config-airbnb-typescript": "17.1.0",
    "eslint-config-prettier": "8.9.0",
    "eslint-import-resolver-node": "0.3.8",
    "eslint-plugin-import": "2.28.0",
    "eslint-plugin-jest": "27.2.3",
    "fork-ts-checker-webpack-plugin": "8.0.0",
    "jest": "29.6.2",
    "jest-watch-typeahead": "2.2.2",
    "prettier": "2.8.8",
    "serverless": "3.33.0",
    "serverless-appsync-plugin": "2.3.1",
    "serverless-deployment-bucket": "1.6.0",
    "serverless-prune-plugin": "2.0.2",
    "serverless-webpack": "5.13.0",
    "swc-loader": "0.2.3",
    "typescript": "5.1.6",
    "webpack": "5.88.2",
    "webpack-node-externals": "3.0.0"
  },
  "jest": {
    "collectCoverageFrom": [
      "src/**/*.{ts,tsx}",
      "!src/**/*.d.ts"
    ],
    "setupFilesAfterEnv": [
      "<rootDir>/src/setupTests.ts"
    ],
    "testEnvironment": "node",
    "transform": {
      "^.+\\.(t|j)sx?$": "@swc/jest"
    },
    "watchPlugins": [
      "jest-watch-typeahead/filename",
      "jest-watch-typeahead/testname"
    ]
  },
  "lint-staged": {
    "*": "prettier --ignore-unknown --write",
    "src/**/*.{ts,tsx}": "eslint --fix"
  }
}
