{
  "name": "@accounts/api",
  "version": "0.0.0-development",
  "description": "Motech Development accounts API",
  "scripts": {
    "deploy": "serverless deploy --verbose",
    "lint": "eslint --cache './src/**/*.ts'",
    "teardown": "serverless remove --verbose",
    "test": "jest --watch",
    "test-ci": "jest --coverage --runInBand"
  },
  "dependencies": {
    "@motech-development/node-logger": "workspace:*",
    "aws-appsync": "4.1.8",
    "aws-sdk": "2.1241.0",
    "cross-fetch": "3.1.5",
    "decimal.js": "10.4.2",
    "graphql": "15.8.0",
    "graphql-tag": "2.12.6",
    "luxon": "2.5.2"
  },
  "devDependencies": {
    "@babel/core": "7.20.12",
    "@babel/preset-env": "7.20.2",
    "@babel/preset-typescript": "7.18.6",
    "@motech-development/eslint-config-motech-base": "workspace:*",
    "@motech-development/prettier-motech-config": "workspace:*",
    "@motech-development/semantic-release": "workspace:*",
    "@motech-development/serverless-outputs-env": "workspace:*",
    "@types/aws-lambda": "8.10.110",
    "@types/jest": "29.4.0",
    "@types/luxon": "2.0.9",
    "aws-lambda-mock-context": "3.2.1",
    "babel-loader": "9.1.0",
    "eslint": "8.33.0",
    "fork-ts-checker-webpack-plugin": "7.2.13",
    "jest": "29.4.2",
    "prettier": "2.3.0",
    "serverless": "3.27.0",
    "serverless-appsync-plugin": "1.14.0",
    "serverless-deployment-bucket": "1.6.0",
    "serverless-prune-plugin": "2.0.1",
    "serverless-webpack": "^5.11.0",
    "typescript": "4.9.5",
    "webpack": "5.75.0",
    "webpack-node-externals": "3.0.0"
  },
  "jest": {
    "collectCoverageFrom": [
      "src/**/*.{ts,tsx}",
      "!src/**/*.d.ts"
    ],
    "testEnvironment": "node"
  },
  "lint-staged": {
    "*": "prettier --ignore-unknown --write",
    "src/**/*.{ts,tsx}": "eslint --cache --fix"
  }
}
