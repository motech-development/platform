{
  "name": "@accounts/api",
  "version": "0.0.0",
  "description": "Motech Development accounts API",
  "private": true,
  "scripts": {
    "deploy": "serverless deploy --verbose",
    "lint": "eslint -c .eslintrc.yml './src/**/*.ts'",
    "precommit": "lint-staged",
    "prettier": "prettier --config ../../../.prettierrc.yml --write 'src/**/*'",
    "teardown": "serverless remove --verbose",
    "test": "jest --watch",
    "test:ci": "jest --coverage --runInBand"
  },
  "dependencies": {
    "aws-appsync": "4.1.8",
    "cross-fetch": "3.1.5",
    "graphql-tag": "2.12.6",
    "decimal.js": "10.3.1",
    "luxon": "2.3.0"
  },
  "devDependencies": {
    "@motech-development/serverless-outputs-env": "^0.0.0",
    "@types/assert": "1.5.6",
    "@types/jest": "26.0.24",
    "assert": "2.0.0",
    "aws-lambda-mock-context": "3.2.1",
    "jest": "26.6.0",
    "tomlify-j0.4": "3.0.0"
  },
  "jest": {
    "collectCoverageFrom": [
      "src/**/*.{ts,tsx}",
      "!src/**/*.d.ts"
    ],
    "testEnvironment": "node"
  }
}
