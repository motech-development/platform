{
  "name": "@accounts/reports",
  "version": "0.0.0-development",
  "description": "Motech Development accounts report generator service",
  "scripts": {
    "deploy": "serverless deploy --verbose",
    "lint": "eslint './src/**/*.ts'",
    "teardown": "serverless remove --verbose",
    "test": "jest --watch",
    "test-ci": "jest --coverage --runInBand"
  },
  "dependencies": {
    "@aws-sdk/client-dynamodb": "3.370.0",
    "@aws-sdk/lib-dynamodb": "3.370.0",
    "@motech-development/node-logger": "workspace:*",
    "@motech-development/s3-file-operations": "workspace:*",
    "@sentry/aws-serverless": "8.39.0",
    "@sentry/profiling-node": "8.39.0",
    "archiver": "5.3.2",
    "aws4-axios": "3.2.8",
    "axios": "1.7.7",
    "json-2-csv": "4.1.0",
    "luxon": "3.5.0",
    "qs": "6.13.1",
    "uuid": "9.0.1",
    "yup": "1.4.0"
  },
  "devDependencies": {
    "@motech-development/eslint-config-motech-base": "workspace:*",
    "@motech-development/prettier-motech-config": "workspace:*",
    "@motech-development/semantic-release": "workspace:*",
    "@swc/core": "1.9.2",
    "@swc/jest": "0.2.37",
    "@types/archiver": "6.0.3",
    "@types/aws-lambda": "8.10.145",
    "@types/jest": "29.5.14",
    "@types/luxon": "3.4.2",
    "@types/qs": "6.9.17",
    "@types/uuid": "9.0.8",
    "@typescript-eslint/eslint-plugin": "6.2.1",
    "@typescript-eslint/parser": "6.2.1",
    "aws-lambda-mock-context": "3.2.1",
    "aws-sdk-client-mock": "4.1.0",
    "aws-sdk-client-mock-jest": "4.1.0",
    "eslint": "8.57.1",
    "eslint-config-airbnb-base": "15.0.0",
    "eslint-config-airbnb-typescript": "18.0.0",
    "eslint-config-prettier": "9.1.0",
    "eslint-import-resolver-node": "0.3.9",
    "eslint-plugin-import": "2.31.0",
    "eslint-plugin-jest": "28.9.0",
    "eslint-plugin-simple-import-sort": "12.1.1",
    "fork-ts-checker-webpack-plugin": "9.0.2",
    "jest": "29.7.0",
    "jest-date-mock": "1.0.10",
    "jest-watch-typeahead": "2.2.2",
    "prettier": "3.2.5",
    "serverless": "3.39.0",
    "serverless-deployment-bucket": "1.6.0",
    "serverless-prune-plugin": "2.1.0",
    "serverless-step-functions": "3.21.1",
    "serverless-webpack": "5.15.0",
    "swc-loader": "0.2.6",
    "typescript": "5.6.3",
    "webpack": "5.96.1",
    "webpack-node-externals": "3.0.0"
  },
  "jest": {
    "collectCoverageFrom": [
      "src/**/*.{ts,tsx}",
      "!src/**/*.d.ts"
    ],
    "setupFilesAfterEnv": [
      "<rootDir>/src/setupTests.ts"
    ],
    "testEnvironment": "node",
    "transform": {
      "^.+\\.(t|j)sx?$": "@swc/jest"
    },
    "watchPlugins": [
      "jest-watch-typeahead/filename",
      "jest-watch-typeahead/testname"
    ]
  },
  "lint-staged": {
    "*": "prettier --ignore-unknown --write",
    "src/**/*.{ts,tsx}": "eslint --fix"
  }
}
