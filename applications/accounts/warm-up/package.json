{
  "name": "@accounts/warm-up",
  "version": "0.0.0",
  "description": "Motech Development accounts warm up service",
  "private": true,
  "scripts": {
    "deploy": "serverless deploy --verbose",
    "lint": "eslint -c .eslintrc.yml './src/**/*.ts'",
    "precommit": "lint-staged",
    "prettier": "prettier --config ../../../.prettierrc.yml --write 'src/**/*'",
    "start": "serverless invoke stepf --name warmUp",
    "teardown": "serverless remove --verbose",
    "test": "jest --watch",
    "test:ci": "jest --coverage --runInBand"
  },
  "dependencies": {
    "@motech-development/logger": "^0.0.0",
    "luxon": "2.3.0",
    "uuid": "8.3.2",
    "yup": "0.29.3"
  },
  "devDependencies": {
    "@types/jest": "26.0.24",
    "aws-lambda-mock-context": "3.2.1",
    "jest": "26.6.0",
    "jest-date-mock": "1.0.8"
  },
  "jest": {
    "collectCoverageFrom": [
      "src/**/*.{ts,tsx}",
      "!src/**/*.d.ts"
    ],
    "setupFiles": [
      "jest-date-mock"
    ],
    "testEnvironment": "node"
  }
}
