{
  "name": "@motech-development/accounts-client",
  "version": "0.0.0",
  "description": "Motech Development accounts client application",
  "private": true,
  "scripts": {
    "build": "react-app-rewired build",
    "deploy": "serverless client deploy --verbose --no-confirm",
    "lint": "eslint -c .eslintrc.yml './src/**/*.{ts,tsx}'",
    "precommit": "lint-staged",
    "prettier": "prettier --config ../../.prettierrc.yml --check 'src/**/*'",
    "start": "react-app-rewired start",
    "teardown": "serverless client remove --verbose --no-confirm",
    "test": "react-app-rewired test",
    "test:ci": "react-app-rewired test --coverage --runInBand --reporters=default --reporters=jest-junit"
  },
  "dependencies": {
    "@apollo/react-hooks": "^3.1.3",
    "@auth0/auth0-spa-js": "^1.6.0",
    "@fortawesome/fontawesome-svg-core": "^1.2.25",
    "@fortawesome/free-solid-svg-icons": "^5.11.2",
    "@fortawesome/react-fontawesome": "^0.1.8",
    "@motech-development/auth": "^0.0.0",
    "@motech-development/breeze-ui": "^0.0.0",
    "apollo-boost": "^0.4.7",
    "apollo-cache-inmemory": "^1.6.5",
    "apollo-client": "^2.6.8",
    "apollo-link": "^1.2.13",
    "aws-appsync": "^3.0.2",
    "aws-appsync-auth-link": "^2.0.1",
    "aws-appsync-subscription-link": "^2.0.1",
    "axios": "^0.19.0",
    "formik": "^2.0.8",
    "graphql": "^14.6.0",
    "history": "^4.10.1",
    "i18next": "^19.0.2",
    "i18next-browser-languagedetector": "^4.0.1",
    "i18next-xhr-backend": "^3.2.2",
    "polished": "^3.4.2",
    "react": "^16.12.0",
    "react-apollo": "^3.1.3",
    "react-dom": "^16.12.0",
    "react-i18next": "^11.2.7",
    "react-idle-timer": "^4.2.12",
    "react-number-format": "^4.4.1",
    "react-popper": "^1.3.7",
    "react-router-dom": "^5.1.2",
    "styled-components": "^4.4.1",
    "styled-reset": "^4.0.8",
    "yup": "^0.28.0"
  },
  "eslintConfig": {
    "extends": "react-app"
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  },
  "devDependencies": {
    "@apollo/react-testing": "^3.1.3",
    "@types/react-router-dom": "^5.1.3",
    "@types/yup": "^0.26.27"
  },
  "jest": {
    "moduleDirectories": [
      "../../node_modules",
      "<rootDir>/node_modules"
    ]
  },
  "jest-junit": {
    "outputDirectory": "../../reports/junit",
    "outputName": "accounts-client.xml"
  }
}
