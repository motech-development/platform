{
  "name": "platform",
  "version": "0.0.0",
  "description": "Motech Development applications monorepo",
  "private": true,
  "scripts": {
    "add": "lerna add",
    "add:dev": "lerna add --dev",
    "add:peer": "lerna add --peer",
    "bootstrap": "lerna bootstrap",
    "build": "lerna run build --stream",
    "clean:lerna": "lerna clean",
    "clean:git": "git branch --merged | egrep -v \"(^\\*|master|develop)\" | xargs git branch -d",
    "deploy": "lerna run deploy --stream",
    "deploy:infrastructure": "lerna run deploy:infrastructure --stream",
    "e2e": "lerna run e2e --stream",
    "e2e:ci": "lerna run e2e:ci --stream",
    "exec": "lerna exec",
    "execute": "lerna run --stream",
    "lint": "lerna run lint",
    "package": "lerna run package --stream",
    "postinstall": "npm run bootstrap",
    "prettier": "lerna run prettier --stream",
    "start": "lerna run start --stream",
    "teardown": "lerna run teardown --stream",
    "teardown:infrastructure": "lerna run teardown:infrastructure --stream",
    "test": "lerna run test --stream",
    "test:ci": "lerna run test:ci",
    "update:lerna": "lerna exec ncu",
    "update:wizard": "lernaupdate"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/motech-development/platform.git"
  },
  "author": "Mo Gusbi <mo.gusbi@motechdevelopment.co.uk> (https://motechdevelopment.co.uk)",
  "license": "UNLICENSED",
  "bugs": {
    "url": "https://github.com/motech-development/platform/issues"
  },
  "homepage": "https://github.com/motech-development/platform#readme",
  "devDependencies": {
