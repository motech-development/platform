{
  "name": "platform",
  "version": "0.0.0",
  "description": "Motech Development applications monorepo",
  "private": true,
  "workspaces": [
    "applications/*/*",
    "packages/*"
  ],
  "scripts": {
    "clean-git": "git branch --merged | egrep -v \"(^\\*|master|develop)\" | xargs git branch -d",
    "lint": "yarn workspaces foreach -p run lint",
    "package": "yarn workspaces foreach -p -t run package",
    "prepare": "husky install",
    "prettier": "yarn workspaces foreach -p run prettier",
    "test-ci": "yarn workspaces foreach run test-ci"
  },
