{
  "name": "platform",
  "version": "0.0.0",
  "description": "Motech Development applications mono repo",
  "private": true,
  "scripts": {
    "add": "lerna add --scope=@motech-development/$APP",
    "add:dev": "npm run add -- --dev",
    "add:peer": "npm run add -- --peer",
    "bootstrap": "lerna bootstrap",
    "build": "lerna run build  --stream --scope=@motech-development/$APP",
    "clean": "lerna clean",
    "lint": "lerna run lint --scope=@motech-development/$APP",
    "postinstall": "npm run bootstrap",
    "start": "lerna run start  --stream --scope=@motech-development/$APP",
    "storybook": "lerna run storybook  --stream --scope=@motech-development/$APP"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/motech-development/platform.git"
  },
  "author": "Mo Gusbi <mo.gusbi@motechdevelopment.co.uk> (https://motechdevelopment.co.uk)",
  "license": "UNLICENSED",
  "bugs": {
    "url": "https://github.com/motech-development/platform/issues"
  },
  "homepage": "https://github.com/motech-development/platform#readme",
  "dependencies": {
    "polished": "^3.4.2",
    "react": "^16.12.0",
    "react-dom": "^16.12.0",
    "styled-components": "^4.4.1",
    "styled-reset": "^4.0.8"
  },
  "devDependencies": {
    "@commitlint/cli": "^8.2.0",
    "@commitlint/config-conventional": "^8.2.0",
    "@testing-library/jest-dom": "^4.2.4",
    "@testing-library/react": "^9.3.2",
    "@testing-library/user-event": "^7.1.2",
    "@types/jest": "^24.0.23",
    "@types/node": "^12.12.14",
    "@types/react": "^16.9.15",
    "@types/react-dom": "^16.9.4",
    "@types/styled-components": "^4.4.0",
    "commitizen": "^4.0.3",
    "cz-lerna-changelog": "^2.0.2",
    "eslint": "^6.6.0",
    "eslint-config-airbnb": "^18.0.1",
    "eslint-config-prettier": "^6.7.0",
    "eslint-plugin-import": "^2.18.2",
    "eslint-plugin-jsx-a11y": "^6.2.3",
    "eslint-plugin-react": "^7.17.0",
    "eslint-plugin-react-hooks": "^1.7.0",
    "husky": "^3.1.0",
    "lerna": "^3.19.0",
    "lerna-update-wizard": "^0.17.5",
    "lint-staged": "^9.5.0",
    "prettier": "1.19.1",
    "pretty-quick": "^2.0.1",
    "react-scripts": "3.3.0",
    "rimraf": "^3.0.0",
    "rollup": "^1.27.8",
    "rollup-plugin-commonjs": "^10.1.0",
    "rollup-plugin-node-resolve": "^5.2.0",
    "rollup-plugin-peer-deps-external": "^2.2.0",
    "rollup-plugin-typescript2": "^0.25.3",
    "typescript": "^3.7.3"
  },
  "husky": {
    "hooks": {
      "commit-msg": "commitlint -E HUSKY_GIT_PARAMS",
      "prepare-commit-msg": "exec < /dev/tty && git cz --hook",
      "pre-commit": "lerna run --concurrency 1 --stream precommit && pretty-quick --staged"
    }
  },
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-lerna-changelog"
    }
  }
}
