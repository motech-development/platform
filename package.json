{
  "name": "platform",
  "version": "0.0.0",
  "description": "Motech Development applications monorepo",
  "private": true,
  "workspaces": [
    "applications/*/*",
    "packages/*"
  ],
  "scripts": {
    "add:dep": "lerna add",
    "add:dev": "lerna add --dev",
    "add:peer": "lerna add --peer",
    "build": "lerna run build --stream",
    "clean:lerna": "lerna clean",
    "clean:git": "git branch --merged | egrep -v \"(^\\*|master|develop)\" | xargs git branch -d",
    "deploy": "lerna run deploy --stream",
    "deploy:infrastructure": "lerna run deploy:infrastructure --stream",
    "e2e": "lerna run e2e --stream",
    "e2e:ci": "lerna run e2e:ci --stream",
    "exec": "lerna exec",
    "execute": "lerna run --stream",
    "lint": "lerna run lint",
    "outdated:lerna": "lerna exec -- ncu -p yarn",
    "package": "lerna run package --stream",
    "prettier": "lerna run prettier --stream",
    "start": "lerna run start --stream",
    "teardown": "lerna run teardown --stream",
    "teardown:infrastructure": "lerna run teardown:infrastructure --stream",
    "test": "lerna run test --stream",
    "test:ci": "lerna run test:ci",
    "update:wizard": "lernaupdate"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/motech-development/platform.git"
  },
  "author": "Mo Gusbi <mo.gusbi@motechdevelopment.co.uk> (https://motechdevelopment.co.uk)",
  "license": "UNLICENSED",
  "bugs": {
    "url": "https://github.com/motech-development/platform/issues"
  },
  "homepage": "https://github.com/motech-development/platform#readme",
  "devDependencies": {
    "@babel/plugin-transform-runtime": "^7.12.1",
    "@commitlint/cli": "^12.0.1",
    "@commitlint/config-conventional": "^12.0.1",
    "@rollup/plugin-babel": "^5.3.0",
    "@rollup/plugin-commonjs": "^18.0.0",
    "@rollup/plugin-node-resolve": "^11.2.1",
    "@testing-library/cypress": "^7.0.5",
    "@testing-library/jest-dom": "^5.11.10",
    "@testing-library/react": "^11.2.6",
    "@testing-library/react-hooks": "^5.1.0",
    "@testing-library/user-event": "^13.1.1",
    "@types/archiver": "^5.1.0",
    "@types/assert": "^1.5.1",
    "@types/auth0-js": "^9.14.3",
    "@types/aws-lambda": "^8.10.73",
    "@types/aws4": "^1.5.1",
    "@types/file-saver": "^2.0.1",
    "@types/google.analytics": "0.0.41",
    "@types/jest": "^26.0.22",
    "@types/luxon": "^1.26.3",
    "@types/node": "^12.20.7",
    "@types/qs": "^6.9.6",
    "@types/react": "^17.0.3",
    "@types/react-dom": "^17.0.3",
    "@types/react-router-dom": "^5.1.5",
    "@types/serverless": "^1.78.23",
    "@types/styled-components": "^5.1.9",
    "@types/uuid": "^8.0.0",
    "@types/webpack": "^4.41.27",
    "@types/yup": "^0.29.3",
    "aws-lambda-mock-context": "^3.2.1",
    "aws-sdk": "^2.874.0",
    "axe-core": "^4.1.3",
    "babel-loader": "8.1.0",
    "cache-loader": "^4.1.0",
    "commitizen": "^4.2.3",
    "copy-webpack-plugin": "6.4.0",
    "cypress": "^6.8.0",
    "cypress-axe": "^0.12.2",
