{
  "name": "platform",
  "version": "0.0.0",
  "description": "Motech Development applications monorepo",
  "private": true,
  "scripts": {
    "add": "lerna add --no-bootstrap",
    "add:dev": "lerna add --no-bootstrap --dev",
    "add:peer": "lerna add --no-bootstrap --peer",
    "bootstrap": "lerna bootstrap",
    "build": "lerna run build --stream",
    "clean": "lerna clean",
    "deploy": "lerna run deploy --stream",
    "deploy:infrastructure": "lerna run deploy:infrastructure --stream",
    "exec": "lerna exec",
    "execute": "lerna run --stream",
    "lint": "lerna run lint",
    "postinstall": "npm run bootstrap",
    "prettier": "lerna run prettier --stream",
    "start": "lerna run start --stream",
    "teardown": "lerna run teardown --stream",
    "teardown:infrastructure": "lerna run teardown:infrastructure --stream",
    "test": "lerna run test --stream",
    "test:ci": "lerna run test:ci",
    "update:wizard": "lernaupdate"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/motech-development/platform.git"
  },
  "author": "Mo Gusbi <mo.gusbi@motechdevelopment.co.uk> (https://motechdevelopment.co.uk)",
  "license": "UNLICENSED",
  "bugs": {
    "url": "https://github.com/motech-development/platform/issues"
  },
  "homepage": "https://github.com/motech-development/platform#readme",
  "devDependencies": {
    "@commitlint/cli": "^8.3.5",
    "@commitlint/config-conventional": "^8.3.4",
    "@testing-library/jest-dom": "^4.2.4",
    "@testing-library/react": "^9.5.0",
    "@testing-library/react-hooks": "^3.2.1",
    "@testing-library/user-event": "^7.2.1",
    "@types/aws-lambda": "^8.10.46",
    "@types/jest": "^24.0.23",
    "@types/node": "^12.12.14",
    "@types/react": "^16.9.15",
    "@types/react-dom": "^16.9.4",
    "@types/styled-components": "^4.4.0",
    "aws-sdk": "^2.642.0",
    "babel-loader": "^8.0.6",
    "babel-plugin-styled-components": "^1.10.7",
    "cache-loader": "^4.1.0",
    "commitizen": "^4.0.3",
    "cz-lerna-changelog": "^2.0.2",
    "eslint": "^6.6.0",
    "eslint-config-airbnb": "^18.0.1",
    "eslint-config-prettier": "^6.7.0",
    "eslint-plugin-import": "^2.18.2",
    "eslint-plugin-jsx-a11y": "^6.2.3",
    "eslint-plugin-prettier": "^3.1.2",
    "eslint-plugin-react": "^7.17.0",
    "eslint-plugin-react-hooks": "^1.7.0",
    "fork-ts-checker-webpack-plugin": "^4.1.0",
    "husky": "^3.1.0",
    "jest": "^24.9.0",
    "jest-junit": "^10.0.0",
    "jest-styled-components": "^6.3.4",
    "lerna": "^3.20.2",
    "lerna-update-wizard": "^0.17.7",
    "lint-staged": "^9.5.0",
    "prettier": "1.19.1",
    "pretty-quick": "^2.0.1",
    "react-app-rewire-styled-components": "^3.0.2",
    "react-app-rewired": "^2.1.5",
    "react-scripts": "3.4.0",
    "react-test-renderer": "^16.13.0",
    "rimraf": "^3.0.2",
    "rollup": "^1.32.0",
    "rollup-plugin-commonjs": "^10.1.0",
    "rollup-plugin-node-resolve": "^5.2.0",
    "rollup-plugin-peer-deps-external": "^2.2.2",
    "rollup-plugin-typescript2": "^0.25.3",
    "serverless": "^1.65.0",
    "serverless-appsync-plugin": "^1.2.0",
    "serverless-finch": "^2.5.2",
    "serverless-step-functions": "^2.17.2",
    "serverless-webpack": "^5.3.1",
    "thread-loader": "^2.1.3",
    "typescript": "^3.7.3",
    "webpack": "^4.41.5",
    "webpack-node-externals": "^1.7.2"
  },
  "husky": {
    "hooks": {
      "commit-msg": "commitlint -E HUSKY_GIT_PARAMS",
      "prepare-commit-msg": "exec < /dev/tty && git cz --hook",
      "pre-commit": "lerna run --concurrency 1 --stream precommit && pretty-quick --staged"
    }
  },
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-lerna-changelog"
    }
  }
}
