{
  "extends": ["config:base"],
  "ignoreDeps": ["prettier"],
  "packageRules": [
    {
      "automerge": true,
      "extends": ["schedule:monthly"],
      "matchUpdateTypes": ["minor", "patch", "pin", "digest"]
    },
    {
      "matchPaths": ["applications/accounts/api"],
      "matchPackageNames": ["graphql"],
      "allowedVersions": "< 16.0.0"
    }
  ],
  "prConcurrentLimit": 1,
  "rebaseWhen": "behind-base-branch",
  "stabilityDays": 5,
  "timezone": "Europe/London"
}
