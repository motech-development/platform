{
  "name": "@motech-development/breeze-ui",
  "version": "0.0.0",
  "description": "Breeze UI component library",
  "main": "lib/index.cjs.js",
  "module": "lib/index.esm.js",
  "types": "lib/index.d.ts",
  "scripts": {
    "build": "NODE_ENV=production rollup -c",
    "deploy": "storybook-to-ghpages --ci --host-token-env-variable=GITHUB_TOKEN",
    "lint": "eslint -c .eslintrc.yml './src/**/*.{ts,tsx}'",
    "package": "yarn build",
    "postbuild": "tsc --project tsconfig.build.json --emitDeclarationOnly",
    "prebuild": "rimraf ./lib",
    "precommit": "lint-staged",
    "prettier": "prettier --config ../../.prettierrc.yml --write 'src/**/*'",
    "start": "start-storybook",
    "test": "jest --watch",
    "test:ci": "jest --coverage --runInBand"
  },
  "author": "Mo Gusbi <mo.gusbi@motechdevelopment.co.uk> (https://motechdevelopment.co.uk)",
  "license": "ISC",
  "dependencies": {
    "formik": "^2.2.9",
    "luxon": "^2.0.2",
    "react": "^17.0.2",
    "react-dom": "^17.0.2"
  },
  "devDependencies": {
    "@storybook/addon-a11y": "^6.1.21",
    "@storybook/addon-knobs": "^6.1.21",
    "@storybook/react": "^6.1.21",
    "@storybook/storybook-deployer": "^2.8.7"
  },
  "peerDependencies": {
    "formik": "^2.2.9",
    "luxon": "^2.0.2",
    "react": "17.0.2",
    "react-dom": "17.0.2"
  },
  "jest": {
    "collectCoverageFrom": [
      "src/**/*.{ts,tsx}",
      "!src/**/*.stories.{ts,tsx}"
    ],
    "setupFilesAfterEnv": [
      "<rootDir>/src/setupTests.ts"
    ]
  }
}
