{
  "name": "@motech-development/breeze-ui",
  "version": "0.0.0",
  "description": "Breeze UI component library",
  "main": "lib/index.cjs.js",
  "module": "lib/index.esm.js",
  "types": "lib/index.d.ts",
  "scripts": {
    "build": "yarn prebuild && NODE_ENV=production yarn run -T rollup -c && yarn postbuild",
    "deploy": "storybook-to-ghpages --ci --host-token-env-variable=GITHUB_TOKEN",
    "lint": "yarn run -T eslint -c .eslintrc.yml './src/**/*.{ts,tsx}'",
    "package": "yarn build",
    "postbuild": "yarn run -T tsc --project tsconfig.build.json --emitDeclarationOnly",
    "prebuild": "yarn run -T rimraf ./lib",
    "precommit": "yarn run -T lint-staged",
    "prettier": "yarn run -T prettier --config ../../.prettierrc.yml --write 'src/**/*'",
    "start": "start-storybook",
    "test": "yarn run -T jest --watch",
    "test-ci": "yarn run -T jest --coverage --runInBand"
  },
  "author": "Mo Gusbi <mo.gusbi@motechdevelopment.co.uk> (https://motechdevelopment.co.uk)",
  "license": "ISC",
  "dependencies": {
    "@fortawesome/fontawesome-svg-core": "^1.2.35",
    "@fortawesome/free-solid-svg-icons": "^5.15.3",
    "@fortawesome/react-fontawesome": "^0.1.14",
    "@popperjs/core": "^2.9.1",
    "formik": "^2.2.6",
    "luxon": "^2.0.2",
    "polished": "^4.1.1",
    "react": "^17.0.2",
    "react-dom": "^17.0.2",
    "react-number-format": "^4.5.2",
    "react-popper": "^2.2.5",
    "react-router-dom": "^5.2.0",
    "styled-components": "^5.2.1",
    "styled-reset": "^4.3.4"
  },
  "devDependencies": {
    "@storybook/addon-a11y": "^6.1.21",
    "@storybook/addon-knobs": "^6.1.21",
    "@storybook/react": "^6.1.21",
    "@storybook/storybook-deployer": "^2.8.7",
    "yup": "^0.29.1"
  },
  "peerDependencies": {
    "@fortawesome/fontawesome-svg-core": "1.2.35",
    "@fortawesome/free-solid-svg-icons": "5.15.3",
    "@fortawesome/react-fontawesome": "0.1.14",
    "@popperjs/core": "2.9.1",
    "formik": "2.2.6",
    "luxon": "^2.0.2",
    "polished": "4.1.1",
    "react": "17.0.2",
    "react-dom": "17.0.2",
    "react-number-format": "4.5.2",
    "react-popper": "2.2.5",
    "react-router-dom": "5.2.0",
    "styled-components": "5.2.1",
    "styled-reset": "4.3.4"
  },
  "jest": {
    "collectCoverageFrom": [
      "src/**/*.{ts,tsx}",
      "!src/**/*.stories.{ts,tsx}"
    ],
    "setupFilesAfterEnv": [
      "<rootDir>/src/setupTests.ts"
    ]
  }
}
