{
  "name": "@motech-development/axios-hooks",
  "version": "0.0.0-development",
  "description": "Axios hooks for React",
  "author": "Mo Gusbi <mo.gusbi@motechdevelopment.co.uk> (https://motechdevelopment.co.uk)",
  "license": "ISC",
  "publishConfig": {
    "access": "public"
  },
  "files": [
    "lib"
  ],
  "main": "lib/axios-hooks.cjs.js",
  "module": "lib/axios-hooks.esm.js",
  "types": "lib/axios-hooks.d.ts",
  "scripts": {
    "build": "run prebuild && NODE_ENV=production rollup -c && run postbuild",
    "lint": "eslint --cache './src/**/*.{ts,tsx}'",
    "package": "run build",
    "postbuild": "tsc --project tsconfig.build.json --emitDeclarationOnly",
    "prebuild": "rimraf ./lib",
    "test": "jest --watch",
    "test-ci": "jest --coverage --runInBand"
  },
  "dependencies": {
    "axios": "0.27.2",
    "react": "17.0.2"
  },
  "devDependencies": {
    "@babel/core": "7.20.2",
    "@motech-development/eslint-config-motech-react": "workspace:*",
    "@motech-development/prettier-motech-config": "workspace:*",
    "@motech-development/semantic-release": "workspace:*",
    "@rollup/plugin-babel": "6.0.2",
    "@rollup/plugin-commonjs": "23.0.2",
    "@rollup/plugin-node-resolve": "15.0.1",
    "@testing-library/react-hooks": "8.0.1",
    "@types/jest": "29.4.0",
    "@types/react": "17.0.52",
    "eslint": "8.33.0",
    "jest": "29.4.2",
    "prettier": "2.3.0",
    "rimraf": "3.0.2",
    "rollup": "2.79.1",
    "rollup-plugin-exclude-dependencies-from-bundle": "1.1.23",
    "typescript": "4.2.3"
  },
  "jest": {
    "collectCoverageFrom": [
      "src/**/*.{ts,tsx}"
    ],
    "testEnvironment": "jsdom"
  },
  "lint-staged": {
    "*": "prettier --ignore-unknown --write",
    "src/**/*.{ts,tsx}": "eslint --cache --fix"
  }
}
