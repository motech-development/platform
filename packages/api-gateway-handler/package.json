{
  "name": "@motech-development/api-gateway-handler",
  "version": "0.0.0",
  "description": "Utility to make working with API gateway lambda functions less of a pain",
  "main": "lib/index.cjs.js",
  "module": "lib/index.esm.js",
  "types": "lib/index.d.ts",
  "scripts": {
    "build": "rollup -c",
    "lint": "eslint -c .eslintrc.yml './src/**/*.ts'",
    "package": "npm run build",
    "prebuild": "rimraf ./lib",
    "precommit": "lint-staged",
    "prettier": "prettier --config ../../.prettierrc.yml --check 'src/**/*'",
    "test": "jest --watch",
    "test:ci": "jest --coverage --runInBand --reporters=default --reporters=jest-junit"
  },
  "jest": {
    "collectCoverageFrom": [
      "src/**/*.{ts,tsx}",
      "!src/**/*.d.ts"
    ],
    "moduleDirectories": [
      "../../node_modules",
      "<rootDir>/node_modules"
    ],
    "testEnvironment": "node"
  },
  "jest-junit": {
    "outputDirectory": "../../reports/junit",
    "outputName": "api-gateway-handler.xml"
  }
}
