{
  "name": "@motech-development/serverless-outputs-env",
  "version": "0.0.0",
  "description": "A Serverless plugin to get Serverless outputs as environment variables",
  "author": "Mo Gusbi <mo.gusbi@motechdevelopment.co.uk> (https://motechdevelopment.co.uk)",
  "license": "ISC",
  "main": "lib/outputs-env-plugin.cjs.js",
  "module": "lib/outputs-env-plugin.esm.js",
  "types": "lib/outputs-env-plugin.d.ts",
  "scripts": {
    "build": "rollup -c",
    "lint": "eslint -c .eslintrc.yml './src/**/*.ts'",
    "package": "yarn build",
    "postbuild": "tsc --project tsconfig.build.json --emitDeclarationOnly",
    "prebuild": "rimraf ./lib",
    "precommit": "lint-staged",
    "prettier": "prettier --config ../../.prettierrc.yml --write 'src/**/*'",
    "test": "jest --watch",
    "test:ci": "jest --coverage --runInBand"
  },
  "dependencies": {
    "assert": "^2.0.0",
    "tomlify-j0.4": "^3.0.0"
  },
  "devDependencies": {
    "@babel/plugin-transform-runtime": "7.18.9",
    "@rollup/plugin-babel": "5.3.1",
    "@rollup/plugin-commonjs": "21.0.3",
    "@rollup/plugin-node-resolve": "13.1.3",
    "@types/assert": "1.5.6",
    "@types/jest": "26.0.24",
    "@types/serverless": "1.78.44",
    "@typescript-eslint/eslint-plugin": "4.20.0",
    "@typescript-eslint/parser": "4.20.0",
    "eslint": "7.28.0",
    "eslint-config-airbnb": "18.2.1",
    "eslint-config-prettier": "8.3.0",
    "eslint-plugin-import": "2.25.4",
    "eslint-plugin-prettier": "4.0.0",
    "jest": "26.6.0",
    "lint-staged": "12.3.7",
    "prettier": "2.3.0",
    "rimraf": "3.0.2",
    "rollup": "2.63.0",
    "rollup-plugin-exclude-dependencies-from-bundle": "1.1.22",
    "typescript": "4.2.3"
  },
  "jest": {
    "collectCoverageFrom": [
      "src/**/*.{ts,tsx}",
      "!src/**/*.d.ts"
    ],
    "setupFilesAfterEnv": [
      "<rootDir>/src/setupTests.ts"
    ],
    "testEnvironment": "node"
  }
}
