{
  "name": "@motech-development/serverless-outputs-env",
  "version": "0.0.0",
  "description": "A Serverless plugin to get Serverless outputs as environment variables",
  "main": "lib/outputs-env-plugin.cjs.js",
  "module": "lib/outputs-env-plugin.esm.js",
  "types": "lib/outputs-env-plugin.d.ts",
  "scripts": {
    "build": "rollup -c",
    "lint": "eslint -c .eslintrc.yml './src/**/*.ts'",
    "package": "npm run build",
    "prebuild": "rimraf ./lib",
    "precommit": "lint-staged",
    "prettier": "prettier --config ../../.prettierrc.yml --check 'src/**/*'",
    "test": "jest --watch",
    "test:ci": "jest --coverage --runInBand --reporters=default --reporters=jest-junit"
  },
  "dependencies": {
    "assert": "^2.0.0",
    "tomlify-j0.4": "^3.0.0"
  },
  "peerDependencies": {
    "assert": "2.0.0",
    "tomlify-j0.4": "^3.0.0"
  },
  "jest": {
    "collectCoverageFrom": [
      "src/**/*.{ts,tsx}",
      "!src/**/*.d.ts"
    ],
    "moduleDirectories": [
      "../../node_modules",
      "<rootDir>/node_modules"
    ],
    "setupFilesAfterEnv": [
      "<rootDir>/src/setupTests.ts"
    ],
    "testEnvironment": "node"
  },
  "jest-junit": {
    "outputDirectory": "../../reports/junit",
    "outputName": "serverless-outputs-env.xml"
  }
}
