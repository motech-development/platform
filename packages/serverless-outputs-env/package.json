{
  "name": "@motech-development/serverless-outputs-env",
  "version": "0.0.0",
  "description": "A Serverless plugin to get Serverless outputs as environment variables",
  "author": "Mo Gusbi <mo.gusbi@motechdevelopment.co.uk> (https://motechdevelopment.co.uk)",
  "license": "ISC",
  "main": "lib/outputs-env-plugin.cjs.js",
  "module": "lib/outputs-env-plugin.esm.js",
  "types": "lib/outputs-env-plugin.d.ts",
  "scripts": {
    "build": "yarn prebuild && rollup -c && yarn postbuild",
    "lint": "yarn run -T eslint -c .eslintrc.yml './src/**/*.ts'",
    "package": "yarn build",
    "postbuild": "yarn run -T tsc --project tsconfig.build.json --emitDeclarationOnly",
    "prebuild": "yarn run -T rimraf ./lib",
    "precommit": "yarn run -T lint-staged",
    "prettier": "yarn run -T prettier --config ../../.prettierrc.yml --write 'src/**/*'",
    "test": "yarn run -T jest --watch",
    "test-ci": "yarn run -T jest --coverage --runInBand"
  },
  "dependencies": {
    "assert": "^2.0.0",
    "tomlify-j0.4": "^3.0.0"
  },
  "peerDependencies": {
    "assert": "2.0.0",
    "tomlify-j0.4": "^3.0.0"
  },
  "jest": {
    "collectCoverageFrom": [
      "src/**/*.{ts,tsx}",
      "!src/**/*.d.ts"
    ],
    "setupFilesAfterEnv": [
      "<rootDir>/src/setupTests.ts"
    ],
    "testEnvironment": "node"
  }
}
