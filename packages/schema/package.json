  "license": "ISC",
  "dependencies": {
    "yup": "^0.27.0"
  },
  "devDependencies": {
    "@types/yup": "^0.26.26"
  },
  "peerDependencies": {
    "yup": "^0.27.0"
  },
  "jest": {
    "collectCoverageFrom": [
      "**/src/**/*.ts"
    ],
    "preset": "ts-jest",
    "testEnvironment": "node"
  }
