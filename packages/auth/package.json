{
  "name": "@motech-development/auth",
  "version": "0.0.0-development",
  "description": "Breeze UI authentication library",
  "author": "Mo Gusbi <mo.gusbi@motechdevelopment.co.uk> (https://motechdevelopment.co.uk)",
  "license": "ISC",
  "publishConfig": {
    "access": "public"
  },
  "files": [
    "lib"
  ],
  "main": "lib/index.cjs.js",
  "module": "lib/index.esm.js",
  "types": "lib/index.d.ts",
  "scripts": {
    "build": "run prebuild && NODE_ENV=production rollup -c && run postbuild",
    "lint": "eslint -c .eslintrc.yml './src/**/*.{ts,tsx}'",
    "package": "run build",
    "postbuild": "tsc --project tsconfig.build.json --emitDeclarationOnly",
    "prebuild": "rimraf ./lib",
    "test": "jest --watch",
    "test-ci": "jest --coverage --runInBand"
  },
  "dependencies": {
    "@auth0/auth0-spa-js": "1.22.5",
    "@motech-development/query-string-hook": "workspace:packages/query-string-hook",
    "react": "17.0.2",
    "react-dom": "17.0.2",
    "react-router-dom": "5.3.4"
  },
  "devDependencies": {
    "@babel/core": "7.19.6",
    "@rollup/plugin-babel": "5.3.1",
    "@rollup/plugin-commonjs": "21.0.3",
    "@rollup/plugin-node-resolve": "13.1.3",
    "@testing-library/jest-dom": "5.16.5",
    "@testing-library/react": "12.1.4",
    "@types/jest": "26.0.24",
    "@types/react": "17.0.52",
    "@types/react-dom": "17.0.18",
    "@types/react-router-dom": "5.3.3",
    "@typescript-eslint/eslint-plugin": "4.33.0",
    "@typescript-eslint/parser": "4.33.0",
    "eslint": "7.28.0",
    "eslint-config-airbnb": "18.2.1",
    "eslint-config-prettier": "8.5.0",
    "eslint-config-react-app": "6.0.0",
    "eslint-plugin-import": "2.26.0",
    "eslint-plugin-jsx-a11y": "6.6.1",
    "eslint-plugin-prettier": "4.2.1",
    "eslint-plugin-react": "7.28.0",
    "jest": "26.6.0",
    "prettier": "2.3.0",
    "rimraf": "3.0.2",
    "rollup": "2.79.1",
    "rollup-plugin-exclude-dependencies-from-bundle": "1.1.22",
    "typescript": "4.2.3"
  },
  "jest": {
    "collectCoverageFrom": [
      "src/**/*.{ts,tsx}"
    ],
    "setupFilesAfterEnv": [
      "<rootDir>/src/setupTests.ts"
    ]
  },
  "lint-staged": {
    "*": "prettier --ignore-unknown --write",
    "src/**/*.{ts,tsx}": "eslint -c .eslintrc.yml --fix"
  }
}
