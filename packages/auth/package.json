{
  "name": "@motech-development/auth",
  "version": "0.0.0",
  "description": "Breeze UI authentication library",
  "main": "lib/auth.cjs.js",
  "module": "lib/auth.esm.js",
  "types": "lib/auth.d.ts",
  "scripts": {
    "build": "rollup -c",
    "lint": "eslint -c .eslintrc.yml './src/**/*.{ts,tsx}'",
    "prebuild": "rimraf ./lib",
    "precommit": "lint-staged",
    "prepare": "npm run build",
    "prettier": "prettier --config ../../.prettierrc.yml --check 'src/**/*'",
    "test": "jest --watch",
    "test:ci": "jest --coverage --runInBand --reporters=default --reporters=jest-junit"
  },
  "author": "Mo Gusbi <mo.gusbi@motechdevelopment.co.uk> (https://motechdevelopment.co.uk)",
  "license": "ISC",
  "dependencies": {
    "@auth0/auth0-spa-js": "^1.6.0",
    "react": "^16.12.0"
  },
  "peerDependencies": {
    "@auth0/auth0-spa-js": "^1.6.0",
    "react": "^16.12.0"
  },
  "jest": {
    "collectCoverageFrom": [
      "**/src/**/*.{ts,tsx}"
    ],
    "moduleDirectories": [
      "../../node_modules",
      "<rootDir>/node_modules"
    ],
    "setupFilesAfterEnv": [
      "<rootDir>/src/setupTests.ts"
    ]
  },
  "jest-junit": {
    "outputDirectory": "../../reports/junit",
    "outputName": "auth.xml"
  }
}
