{
  "name": "@motech-development/webpack-conditional-plugin",
  "version": "0.0.0",
  "description": "A Webpack plugin to conditionally apply plugins",
  "author": "Mo Gusbi <mo.gusbi@motechdevelopment.co.uk> (https://motechdevelopment.co.uk)",
  "license": "ISC",
  "main": "lib/webpack-conditional-plugin.cjs.js",
  "module": "lib/webpack-conditional-plugin.esm.js",
  "types": "lib/webpack-conditional-plugin.d.ts",
  "scripts": {
    "build": "yarn prebuild && yarn run -T rollup -c && yarn postbuild",
    "lint": "yarn run -T eslint -c .eslintrc.yml './src/**/*.ts'",
    "package": "yarn build",
    "postbuild": "yarn run -T tsc --project tsconfig.build.json --emitDeclarationOnly",
    "prebuild": "yarn run -T rimraf ./lib",
    "precommit": "yarn run -T lint-staged",
    "prettier": "yarn run -T prettier --config ../../.prettierrc.yml --write 'src/**/*'",
    "test": "yarn run -T jest --watch",
    "test-ci": "yarn run -T jest --coverage --runInBand"
  },
  "jest": {
    "collectCoverageFrom": [
      "src/**/*.{ts,tsx}",
      "!src/**/*.d.ts"
    ],
    "testEnvironment": "node"
  }
}
