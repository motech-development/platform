{
  "name": "@motech-development/appsync-apollo",
  "version": "0.0.0-development",
  "description": "React Apollo client configured for AppSync",
  "author": "Mo Gusbi <mo.gusbi@motechdevelopment.co.uk> (https://motechdevelopment.co.uk)",
  "license": "ISC",
  "publishConfig": {
    "access": "public"
  },
  "files": [
    "lib"
  ],
  "main": "lib/index.cjs.js",
  "module": "lib/index.esm.js",
  "types": "lib/index.d.ts",
  "scripts": {
    "build": "run prebuild && NODE_ENV=production rollup -c && run postbuild",
    "lint": "eslint -c .eslintrc.yml './src/**/*.{ts,tsx}'",
    "package": "run build",
    "postbuild": "tsc --project tsconfig.build.json --emitDeclarationOnly",
    "prebuild": "rimraf ./lib",
    "test": "jest --watch",
    "test-ci": "jest --coverage --runInBand"
  },
  "dependencies": {
    "@apollo/client": "3.7.1",
    "aws-appsync-auth-link": "3.0.7",
    "aws-appsync-subscription-link": "3.1.1",
    "react": "17.0.2",
    "react-dom": "17.0.2"
  },
  "devDependencies": {
    "@babel/core": "7.20.2",
    "@rollup/plugin-babel": "6.0.2",
    "@rollup/plugin-commonjs": "23.0.2",
    "@rollup/plugin-node-resolve": "15.0.1",
    "@testing-library/jest-dom": "5.16.5",
    "@testing-library/react": "12.1.4",
    "@types/jest": "29.2.2",
    "@types/react": "17.0.52",
    "@types/react-dom": "17.0.18",
    "@typescript-eslint/eslint-plugin": "4.33.0",
    "@typescript-eslint/parser": "4.33.0",
    "eslint": "7.32.0",
    "eslint-config-airbnb": "18.2.1",
    "eslint-config-prettier": "8.5.0",
    "eslint-config-react-app": "6.0.0",
    "eslint-plugin-import": "2.26.0",
    "eslint-plugin-jsx-a11y": "6.6.1",
    "eslint-plugin-prettier": "4.2.1",
    "eslint-plugin-react": "7.28.0",
    "jest": "27.5.1",
    "prettier": "2.3.0",
    "rimraf": "3.0.2",
    "rollup": "2.79.1",
    "rollup-plugin-exclude-dependencies-from-bundle": "1.1.23",
    "typescript": "4.2.3",
    "unfetch": "4.2.0"
  },
  "jest": {
    "collectCoverageFrom": [
      "src/**/*.{ts,tsx}",
      "!src/**/*.stories.{ts,tsx}"
    ],
    "setupFilesAfterEnv": [
      "<rootDir>/src/setupTests.ts"
    ],
    "testEnvironment": "jsdom"
  },
  "lint-staged": {
    "*": "prettier --ignore-unknown --write",
    "src/**/*.{ts,tsx}": "eslint -c .eslintrc.yml --fix"
  }
}
