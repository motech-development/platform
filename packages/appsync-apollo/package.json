{
  "name": "@motech-development/appsync-apollo",
  "version": "0.0.0-development",
  "description": "React Apollo client configured for AppSync",
  "author": "Mo Gusbi <mo.gusbi@motechdevelopment.co.uk> (https://motechdevelopment.co.uk)",
  "license": "ISC",
  "publishConfig": {
    "access": "public"
  },
  "files": [
    "lib"
  ],
  "main": "lib/index.cjs.js",
  "module": "lib/index.esm.js",
  "types": "lib/index.d.ts",
  "scripts": {
    "build": "run prebuild && NODE_ENV=production rollup -c && run postbuild",
    "lint": "eslint --cache './src/**/*.{ts,tsx}'",
    "package": "run build",
    "postbuild": "tsc --project tsconfig.build.json --emitDeclarationOnly",
    "prebuild": "rimraf ./lib",
    "test": "jest --watch",
    "test-ci": "jest --coverage --runInBand"
  },
  "dependencies": {
    "@apollo/client": "3.7.7",
    "aws-appsync-auth-link": "3.0.7",
    "aws-appsync-subscription-link": "3.1.2",
    "react": "17.0.2",
    "react-dom": "17.0.2"
  },
  "devDependencies": {
    "@babel/core": "7.20.12",
    "@motech-development/eslint-config-motech-react": "workspace:*",
    "@motech-development/prettier-motech-config": "workspace:*",
    "@motech-development/semantic-release": "workspace:*",
    "@rollup/plugin-babel": "6.0.3",
    "@rollup/plugin-commonjs": "23.0.7",
    "@rollup/plugin-node-resolve": "15.0.1",
    "@testing-library/jest-dom": "5.16.5",
    "@testing-library/react": "12.1.4",
    "@types/jest": "29.4.0",
    "@types/react": "17.0.53",
    "@types/react-dom": "17.0.19",
    "eslint": "8.33.0",
    "jest": "29.4.3",
    "jest-environment-jsdom": "^29.4.2",
    "prettier": "2.3.0",
    "rimraf": "3.0.2",
    "rollup": "2.79.1",
    "rollup-plugin-exclude-dependencies-from-bundle": "1.1.23",
    "typescript": "4.9.5",
    "unfetch": "4.2.0"
  },
  "jest": {
    "collectCoverageFrom": [
      "src/**/*.{ts,tsx}",
      "!src/**/*.stories.{ts,tsx}"
    ],
    "moduleNameMapper": {
      "^uuid$": "uuid"
    },
    "setupFilesAfterEnv": [
      "<rootDir>/src/setupTests.ts"
    ],
    "testEnvironment": "jsdom"
  },
  "lint-staged": {
    "*": "prettier --ignore-unknown --write",
    "src/**/*.{ts,tsx}": "eslint --cache --fix"
  }
}
